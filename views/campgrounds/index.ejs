<% include ../partials/header %>
    
    <header class='jumbotron'>
        <div class='container text-center'>
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a href='/campgrounds/new' class='btn btn-primary btn-lg'>Add New Campground</a>
            </p>
            <form class='form-inline' action='/campgrounds' method='GET'>
                <div class='form-group'>
                    <input class='form-control' type='text' name='search' placeholder='Campground search....'>
                    <input class='form-control btn btn-default' type='submit' value='Search'>
                </div>
            </form>
        </div>
    </header>
    
    <div class='row text-center'>
        <div class='col-lg-12'>
            <h3>Our Most Popular Campgrounds</h3>
        </div>
    </div>
        
    <div class='row text-center' style='display:flex; flex-wrap:wrap;'>
        <% if(noMatch !== null) { %>
            <div class='col-md-12'>
                <h4><%=noMatch%></h4>
            </div>
        <% } %>
        <% campgrounds.forEach(function(campground){ %>
            <div class='col-md-3 col-sm-6'>
                <img class='thumbnail img-responsive' src='<%=campground.image.url%>'>
                <div class='caption'>
                    <h4><%= campground.name %></h4>
                </div>
                <p>
                    <a href='/campgrounds/<%=campground._id%>' class='btn btn-primary'>More Info</a>
                </p>
            </div>
        <% }); %>
    </div>
    
<% include ../partials/footer %>